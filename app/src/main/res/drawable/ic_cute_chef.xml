<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="120dp"
    android:height="120dp"
    android:viewportWidth="120"
    android:viewportHeight="120">

    <!-- Chef Hat (Triangle) -->
    <path
        android:fillColor="@color/deep_purple"
        android:pathData="M60,20 L20,50 L100,50 Z" />

    <!-- Face (Circle) -->
    <circle
        android:fillColor="#FFD3B784"
    android:pathData="M60,70 a30,30 0 1 0 0.1,0 z" />  <!-- Circle using pathData -->

    <!-- Eyes (Two small circles using pathData) -->
    <path
        android:fillColor="@color/deep_purple"
        android:pathData="M45,60 a5,5 0 1 0 0.1,0 z" />  <!-- Left eye -->
    <path
        android:fillColor="@color/deep_purple"
        android:pathData="M75,60 a5,5 0 1 0 0.1,0 z" />  <!-- Right eye -->

    <!-- Smile (Curved line) -->
    <path
        android:strokeColor="@color/deep_purple"
        android:strokeWidth="3"
        android:pathData="M45,80 Q60,90 75,80"
        android:fillColor="#00000000" />
</vector>