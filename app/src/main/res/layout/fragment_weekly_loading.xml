<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_peach"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Welcome Text -->

        <!-- Lottie Animation -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Welcome to Your Weekly Planner!"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        tools:text="Welcome to Your Weekly Planner!" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/weekly_loading_animation"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="false"
            android:layout_marginBottom="16dp"/>

        <!-- Loading Message -->
        <TextView
            android:id="@+id/loading_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getting things ready for you..."
            android:textSize="16sp"
            android:textColor="@color/secondary_text_color"
            android:layout_marginTop="16dp"
            tools:text="Getting things ready for you..."/>

        <!-- Interactive Tip (Optional) -->
        <TextView
            android:id="@+id/tip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip: Swipe left/right to navigate weeks"
            android:textSize="14sp"
            android:textColor="@android:color/holo_purple"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            tools:text="Tip: Swipe left/right to navigate weeks"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/holo_purple"/>

    </LinearLayout>

</FrameLayout>