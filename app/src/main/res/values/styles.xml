<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- For rounded TextInputLayout -->
    <style name="RoundedTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- For circular social buttons -->
    <style name="CircleButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FunChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/fun_chip_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="SectionTitle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333</item>

    </style>
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@android:color/holo_purple</item>
    </style>



</resources>